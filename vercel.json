{
    "version": 2,
    "builds": [
        {
            "src": "vercel_app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/staticfiles/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "api_handler.py"
        },
        {
            "src": "/(.*)",
            "dest": "vercel_app.py"
        }
    ]
}
